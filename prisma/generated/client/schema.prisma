generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model ShortLink {
  id        String    @id @default(cuid())
  longUrl   String
  shortCode String    @unique
  clicks    Int       @default(0)
  createdAt DateTime  @default(now())
  expiresAt DateTime?

  @@index([expiresAt])
}
