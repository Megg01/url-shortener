generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ShortLink {
  id        String    @id @default(cuid())
  longUrl   String
  shortCode String    @unique
  clicks    Int       @default(0)
  createdAt DateTime  @default(now())
  expiresAt DateTime?

  @@index([expiresAt])
}
